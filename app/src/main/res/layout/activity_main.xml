<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/card_post" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add"
        android:contentDescription="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />



    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/toolsTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="content"
        tools:ignore="NotSibling" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="groupBackground, editor, editText, create, repealEdit"/>

    <ImageView
        android:id="@+id/groupBackground"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:srcCompat="@android:drawable/screen_background_light"
        app:layout_constraintBottom_toTopOf="@id/toolsTop"
        />

    <TextView
        android:id="@+id/editor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacin"
        android:ellipsize="end"
        android:singleLine="true"
        android:hint="@string/edit_message"
        app:layout_constraintTop_toTopOf="@id/create"
        app:layout_constraintStart_toEndOf="@id/create"
        app:layout_constraintEnd_toStartOf="@id/repealEdit"
        tools:text="@sample/posts.json/data/author"/>

    <TextView
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/toolsTop"
        app:layout_constraintStart_toEndOf="@id/create"
        app:layout_constraintEnd_toStartOf="@id/repealEdit"
        tools:text="@sample/posts.json/data/author"/>



    <ImageView
        android:id="@+id/create"
        android:layout_width="@dimen/posts_avatar_size"
        android:layout_height="@dimen/posts_avatar_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/toolsTop"
        app:srcCompat="@drawable/create_48"/>

    <ImageButton
        android:id="@+id/repealEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacin"
        android:background="@android:color/transparent"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@id/toolsTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/clear_28" />







</androidx.constraintlayout.widget.ConstraintLayout>